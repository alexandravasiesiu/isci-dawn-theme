{%- style -%}
  @media only screen and (max-width: 600px) {
    .multicolumn_section {
      display: flex;
      row-gap: 50px;
      justify-content: center;
      flex-wrap: wrap;
    }
    .heading_container {
      width: 85%;
      display: flex;
      flex-flow: column;
    }
    .flex_container {
      display: flex;
      gap: 40px;
      flex-wrap: wrap;
      justify-content: space-evenly;
    }
    .rectangle_column {
      width: 90%;
    }
    .column {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-evenly;
    }
    .column_title {
      width: 90%;
    }
    .column_subtitle {
      display: flex;
      justify-content: start;
      width: 90%;
    }
    .description,
