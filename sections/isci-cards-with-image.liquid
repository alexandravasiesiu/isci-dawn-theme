{%- style -%}
  .cards_with_image_section {
    display: flex;
    flex-flow: column;
    row-gap: 50px;
  }
  .heading_container {
    display: flex;
    flex-flow: column;
    align-items: center;
  }
  .section_title {
    font-family: Assistant;
    font-size: 25px;
    font-weight: 600;
    font-stretch: normal;
    font-style: normal;
    line-height: normal;
    letter-spacing: normal;
    color: #101010;
  }
  .Line-3 {
    width: 67px;
    height: 0.5px;
    border: solid 5px #591311;
  }
  .cards_flex_container {
    display: flex;
    justify-content: space-evenly;
    gap: 10px;
    flex-wrap: wrap;
  }
  .card {
    border-radius: 12px;
    box-shadow: 10px 32px 72px 0 rgba(51, 51, 51, 0.06);
    background-color: #fff;
    width: min-content;
  }
  .card_body {
    display: flex;
    flex-flow: column;
  }
  .card_title {
    font-family: Assistant;
    font-size: 18px;
    font-weight: 600;
    font-stretch: normal;
    font-style: normal;
    line-height: 1.56;
    letter-spacing: normal;
    color: #1b1d21;
  }
  .card_subtitle {
    font-family: Assistant;
    font-size: 18px;
    font-weight: normal;
    font-stretch: normal;
    font-style: normal;
    line-height: 1.56;
    letter-spacing: normal;
    color: #1b1d21;
  }
  .card_price,
  .card_text {
    padding: 10px;
    display: flex;
    flex-flow: column;
    row-gap: 5px;
  }
  .card_text {
    background-color: #fafafa;
  }
  .difficulty_section {
    display: flex;
  }
  .difficulty_levels {
    display: flex;
    justify-content: space-around;
  }
  .progress_bar {
    position: relative;
    overflow-x: hidden;
    margin-top: 8px;
  }
  .progress_bar:before {
    width: 100%;
    height: 8px;
    content: '';
    display: block;
    position: absolute;
    background: #d8d8d8;
    bottom: 0;
    border-radius: 5px;
  }
  .difficulty_bar {
    width: 100%;
    height: 8px;
    background: #868686;
    display: block;
    position: relative;
    border-radius: 5px;
  }
  .difficulty_bar span {
    position: absolute;
    top: -30px;
    font-size: 18px;
    padding: 3px 0;
    font-weight: 500;
  }
  .card_difficulty,
  .card_note {
    font-family: Assistant;
    font-size: 16px;
    font-weight: normal;
    font-stretch: normal;
    font-style: normal;
    line-height: normal;
    letter-spacing: normal;
    color: #1b1d21;
    margin: 0;
  }
  .Lei {
    font-family: Assistant;
    font-size: 18px;
    font-weight: 600;
    font-stretch: normal;
    font-style: normal;
    line-height: normal;
    letter-spacing: normal;
    color: #af0101;
  }
  .Lei,
  .difficulty_levels p {
    margin: 0;
  }
  .cards_button_container {
    display: flex;
    gap: 10px;
    justify-content: space-between;
    width: 100%;
  }
  .cards_button_add {
    width: 150px;
    height: 45px;
    border: none;
    color: black;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    background-color: #fbb612;
  }
  .cards_button_details {
    width: 150px;
    height: 45px;
    border: solid 1px #fbb612;
    color: black;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    background-color: transparent;
  }
  .w-35 {
    width: 35%;
  }
  .w-70 {
    width: 70%;
  }
  .w-100 {
    width: 100%;
  }
  .rg-30 {
    row-gap: 30px;
  }
  @media only screen and (max-width: 768px) {
    .flex_container {
      display: flex;
      justify-content: space-evenly;
      flex-wrap: wrap;
      gap: 50px;
    }
    .card {
      border-radius: 12px;
      box-shadow: 10px 32px 72px 0 rgba(51, 51, 51, 0.06);
      background-color: #fff;
      width: 90%;
    }
    .card_image img {
      width: -webkit-fill-available;
    }
  }
{%- endstyle -%}

<div class="cards_with_image_section page-width isci-padding-y">
  <div class="heading_container">
    <h1 class="section_title">{{ section.settings.title }}</h1>
    <div class="Line-3"><hr class="no-margin"></div>
  </div>
  <div class="cards_flex_container">
    {%- for block in section.blocks -%}
      <div class="card">
        {% if block.settings.image %}
          <div class="card_image">
            <img src="{{ block.settings.image | img_url: 'master' }}">
          </div>
        {% endif %}
        <div class="card_body">
          <div class="card_text">
            <h3 class="card_title">{{ block.settings.title }}</h3>
            <p class="card_subtitle">{{ block.settings.subtitlu }}</p>
            <div class="difficulty_section">
              <div style="width:30%">
                <p class="card_difficulty">Dificultate</p>
              </div>
              <div style="width:70%">
                <div class="progress_bar">
                  <div
                    class="
                      difficulty_bar
                      {% if block.settings.difficulty == 'usor' %}
                        w-35
                      {% endif %}
                      {% if block.settings.difficulty == 'mediu' %}
                        w-70
                      {% endif %}
                      {% if block.settings.difficulty == 'dificil' %}
                        w-100
                      {% endif %}
                    "
                  >
                    <span class="skill-count2"></span>
                  </div>
                </div>
                <div class="difficulty_levels">
                  <p><strong>ușor</strong></p>
                  <p>mediu</p>
                  <p>mare</p>
                </div>
              </div>
            </div>
          </div>
          <div class="card_price">
            {% if block.settings.soon %}
              <div>
                <p class="card_note"><strong>Va fi lansat în curând</strong></p>
              </div>
              <div>
                <a
                  class="cards_button_details"
                  role="link"
                  aria-disabled="true"
                  href="{{block.settings.product.url}}"
                >
                  Sunt interesat
                </a>
              </div>
            {% else %}
              <div>
                <p class="Lei">
                  <span style="color:#101010; opacity: 0.63; text-decoration: line-through;">
                    {{ block.settings.price -}}</span
                  >&emsp;&emsp;&emsp; {{ block.settings.discount_price }}
                </p>
              </div>
              <div class="cards_button_container">
                {%- if block.settings.product
                  and block.settings.product.selected_or_first_available_variant.available
                %}
                  {%- form 'product',
                    block.settings.product,
                    class: 'form',
                    novalidate: 'novalidate',
                    data-type: 'add-to-cart-form'
                  -%}
                    <input type="hidden" name="quantity" value="1">
                    <input
                      type="hidden"
                      name="id"
                      value="{{ block.settings.product.selected_or_first_available_variant.id }}"
                    >
                    <button class="cards_button_add" name="add" type="submit">Adaugă în coș</button>
                  {%- endform -%}
                {% endif %}
                <a
                  class="cards_button_details"
                  role="link"
                  href="{{ block.settings.product.url }}"
                >
                  Detalii
                </a>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>
{% schema %}
{
  "name": "ISCI cards with image",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titlu"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagine"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Titlu"
        },
        {
          "type": "text",
          "id": "subtitlu",
          "label": "Subtitlu"
        },
        {
          "type": "select",
          "id": "difficulty",
          "label": "Dificultate",
          "options": [
            {
              "value": "usor",
              "label": "Ușor"
            },
            {
              "value": "mediu",
              "label": "Mediu"
            },
            {
              "value": "dificil",
              "label": "Dificil"
            }
          ],
          "default": "mediu"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Pret intreg"
        },
        {
          "type": "text",
          "id": "discount_price",
          "label": "Pret cu discount"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Produs"
        },
        {
          "type": "checkbox",
          "id": "soon",
          "label": "In curand"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "ISCI cards with image",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ]
}
{% endschema %}
