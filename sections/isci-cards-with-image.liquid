{%- style -%}
  .cards_with_image_section {
    display: flex;
    flex-flow: column;
    row-gap: 50px;
    padding: 50px 0;
  }
  .heading_container {
    display: flex;
    flex-flow: column;
    align-items: center;
  }
  .section_title {
    font-family: Assistant;
    font-size: 25px;
    font-weight: 600;
    font-stretch: normal;
    font-style: normal;
    line-height: normal;
    letter-spacing: normal;
    color: #101010;
  }
  .Line-3 {
    width: 67px;
    height: 0.5px;
    border: solid 5px #591311;
  }
  .flex_container {
    display: flex;
    justify-content: space-evenly;
  }
  .card {
    border-radius: 12px;
    box-shadow: 10px 32px 72px 0 rgba(51, 51, 51, 0.06);
    background-color: #fff;
    width: min-content;
  }
  .card_body {
    display: flex;
    flex-flow: column;
  }
  .card_title {
    font-family: Assistant;
    font-size: 18px;
    font-weight: 600;
    font-stretch: normal;
    font-style: normal;
    line-height: 1.56;
    letter-spacing: normal;
    color: #1b1d21;
  }
  .card_subtitle {
    font-family: Assistant;
    font-size: 18px;
    font-weight: normal;
    font-stretch: normal;
    font-style: normal;
    line-height: 1.56;
    letter-spacing: normal;
    color: #1b1d21;
  }
  .card_price,
  .card_text {
    padding: 10px;
    display: flex;
    flex-flow: column;
    row-gap: 5px;
  }
  .difficulty_section {
    display: flex;
  }
  .difficulty_levels {
    display: flex;
    justify-content: space-around;
  }
  .progress_bar {
    position: relative;
    overflow-x: hidden;
    margin-top: 8px;
  }
  .progress_bar:before {
    width: 100%;
    height: 8px;
    content: '';
    display: block;
    position: absolute;
    background: #d8d8d8;
    bottom: 0;
    border-radius: 5px;
  }
  .difficulty_bar {
    width: 100%;
    height: 8px;
    background: #868686;
    display: block;
    position: relative;
    border-radius: 5px;
  }
  .difficulty_bar span {
    position: absolute;
    top: -30px;
    font-size: 18px;
    padding: 3px 0;
    font-weight: 500;
  }
  .card_difficulty,
  .card_note {
    font-family: Assistant;
    font-size: 16px;
    font-weight: normal;
    font-stretch: normal;
    font-style: normal;
    line-height: normal;
    letter-spacing: normal;
    color: #1b1d21;
    margin: 0;
  }
  .Lei {
    font-family: Assistant;
    font-size: 18px;
    font-weight: 600;
    font-stretch: normal;
    font-style: normal;
    line-height: normal;
    letter-spacing: normal;
    color: #af0101;
  }
  .Lei,
  .difficulty_levels p {
    margin: 0;
  }
  .button_container {
    display: flex;
    gap: 10px;
    justify-content: space-between;
    width: 100%;
  }
  .button_add {
    width: 150px;
    height: 45px;
    border: none;
    color: black;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    background-color: #fbb612;
  }
  .button_details {
    width: 150px;
    height: 45px;
    border: solid 1px #fbb612;
    color: black;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    background-color: transparent;
  }
  .w-35 {
    width: 35%;
  }
  .rg-30 {
    row-gap: 30px;
  }
  @media only screen and (max-width: 768px) {
    .flex_container {
      display: flex;
      justify-content: space-evenly;
      flex-wrap: wrap;
      gap: 50px;
    }
    .card {
      border-radius: 12px;
      box-shadow: 10px 32px 72px 0 rgba(51, 51, 51, 0.06);
      background-color: #fff;
      width: 90%;
    }
    .card_image img {
      width: -webkit-fill-available;
    }
  }
  @media only screen and (min-width: 768px) {
  }
{%- endstyle -%}

