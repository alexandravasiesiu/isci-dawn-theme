{%- style -%}
  .signin_heading_container {
    display: flex;
    flex-flow: column;
    align-items: center;
    background-color: #101010;
  }
  .signin_heading {
    font-family: Assistant;
    font-size: 30px;
    font-weight: normal;
    font-stretch: normal;
    font-style: normal;
    line-height: 1.73;
    letter-spacing: normal;
    color: #fff;
  }
  .signin_container {
    display: flex;
    justify-content: space-around;
    width: 100%;
  }
  .signin_column {
    width: 100%;
    display: flex;
    flex-flow: column;
    gap: 50px;
    padding: 0 50px;
  }
  .signin_rectangle {
    width: 80%;
    border-radius: 12px;
    box-shadow: 10px 32px 72px 0 rgba(51, 51, 51, 0.06);
    background-color: #fff;
    display: flex;
    flex-flow: column;
    gap: 50px;
    margin: 50px;
    padding: 50px;
  }
  .signin_rectangle_heading {
    display: flex;
    justify-content: center;
  }
  .signin_rectangle_heading p,
  .signin_column_description h4 {
    font-family: Assistant;
    font-size: 20px;
    font-weight: 600;
    font-stretch: normal;
    font-style: normal;
    line-height: 1.4;
    letter-spacing: normal;
    color: #1b1d21;
  }
  .signin_column_description p {
    font-family: Assistant;
    font-size: 18px;
    font-weight: normal;
    font-stretch: normal;
    font-style: normal;
    line-height: 1.56;
    letter-spacing: normal;
    color: #1b1d21;
  }
  .signin_column_form {
    display: flex;
    flex-flow: column;
    gap: 20px;
  }
  .signin_form_boxes {
    display: flex;
    justify-content: space-between;
    gap: 10px;
    flex-wrap: wrap;
    width: 100%;
  }
  .signin_box {
    display: flex;
    width: 45%;
  }
  .signin_data_box {
    width: 315px;
    height: 51px;
    padding: 14px 25px 14px 25px;
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.07);
    background-color: #fafafa;
    border: 0;
  }

  .signin_button_submit {
    width: 238px;
    height: 45px;
    padding: 11px 87px 12px 91px;
    object-fit: contain;
    background-color: #fbb612;
    border: 0;
  }
  .signin_column_bottom {
    display: flex;
    justify-content: center;
  }
  @media only screen and (max-width: 768px) {
    .signin_box {
      display: flex;
      width: 100%;
      felx-wrap: wrap;
    }
    .signin_rectangle {
      width: 80%;
      border-radius: 12px;
      box-shadow: 10px 32px 72px 0 rgba(51, 51, 51, 0.06);
      background-color: #fff;
      display: flex;
      flex-flow: column;
      gap: 50px;
      margin: 0;
      padding: 0;
    }
    .signin_data_box {
      width: 200px;
      height: 51px;
      padding: 14px 25px 14px 25px;
      box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.07);
      background-color: #fafafa;
      border: 0;
    }
    .signin_column {
      width: 100%;
      display: flex;
      flex-flow: column;
      gap: 50px;
      padding: 0 50px;
      margin-bottom: 50px;
    }
  }
{%- endstyle -%}

<div class="signin_section">
  <div class="signin_heading_container">
    <p class="signin_heading">Sunt interesat</p>
  </div>
  <div class="signin_container page-width isci-padding-y">
    <div class="signin_rectangle">
      <div class="signin_rectangle_heading">
        <p>
          <u>Strength & Conditioning Coach</u>
        </p>
      </div>
      <div class="signin_column">
        <div class="signin_column_body">
          <div class="signin_column_description">
            <h4>Pasul 1</h4>
            <p>Achită prețul valabil în ziua plății, în contul: <strong>RO64BTRLRONCRT0289068302</strong></p>
            <p>Detalii companie: SC Educatie ISCI Romania SRL, 34180178</p>
            <h4>Pasul 2</h4>
            <p>Informații personale</p>
          </div>
          <form class="signin_column_form">
            <div class="signin_form_boxes">
              <div class="signin_box">
                <input
                  class="signin_data_box"
                  type="text"
                  id="full_name"
                  name="FullName"
                  placeholder="Nume complet*"
                  required
                >
              </div>
              <div class="signin_box">
                <input
                  class="signin_data_box"
                  type="text"
                  id="mail_adress"
                  name="Mail_Adress"
                  placeholder="E-mail*"
                  required
                >
              </div>
              <div class="signin_box">
                <input class="signin_data_box" type="text" id="phone" name="Tel" placeholder="Telefon*" required>
              </div>
              <div class="signin_box">
                <input class="signin_data_box" type="text" id="size" name="Size" placeholder="Mărime tricou*" required>
              </div>
            </div>
            <div class="signin_column_description">
              <p>Date de facturare</p>
            </div>
            <div class="signin_form_boxes">
              <div class="signin_box">
                <input
                  class="signin_data_box"
                  type="text"
                  id="full_name_company"
                  name="FullNameCompany"
                  placeholder="Nume complet/Nume companie* required"
                >
              </div>
              <div class="signin_box">
                <input
                  class="signin_data_box"
                  type="text"
                  id="id_number"
                  name="ID_Number"
                  placeholder="CNP/CUI*"
                  required
                >
              </div>
              <div class="signin_box">
                <input
                  class="signin_data_box"
                  type="text"
                  id="location_adress"
                  name="LocationAdress"
                  placeholder="Adresa/Sediu social* required"
                >
              </div>
              <div class="signin_box">
                <input
                  type="file"
                  id="payment"
                  name="Payment"
                  hidden
                >
                <label class="signin_data_box" for="payment"
                  >Atașează dovada plății*<span><img src="{{ 'upload.png' | asset_url }}"></span
                ></label>
              </div>
            </div>
            <div class="signin_column_bottom">
              <button
                class="signin_button_submit"
                type="submit"
              >
                TRIMITE
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
