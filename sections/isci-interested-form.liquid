{%- style -%}
  .interested_heading_container {
    display: flex;
    flex-flow: column;
    align-items: center;
    background-color: #101010;
  }
  .interested_heading {
    font-family: Assistant;
    font-size: 30px;
    font-weight: normal;
    font-stretch: normal;
    font-style: normal;
    line-height: 1.73;
    letter-spacing: normal;
    color: #fff;
  }
  .interested_container {
    display: flex;
    justify-content: space-around;
    width: 100%;
  }
  .interested_rectangle {
    width: 80%;
    margin: 50px;
    padding: 50px;
    border-radius: 12px;
    box-shadow: 10px 32px 72px 0 rgba(51, 51, 51, 0.06);
    background-color: #fff;
    display: flex;
    flex-flow: column;
    gap: 50px;
  }
  .interested_rectangle_heading p {
    font-family: Assistant;
    font-size: 20px;
    font-weight: normal;
    font-stretch: normal;
    font-style: normal;
    line-height: 1.4;
    letter-spacing: normal;
    text-align: center;
    color: #1b1d21;
  }
  .interested_form {
    display: flex;
    gap: 10px;
    flex-flow: column;
  }
  .interested_form_description {
    display: flex;
    justify-content: center;
  }
  .interested_form_description p {
    font-family: Assistant;
    font-size: 18px;
    font-weight: normal;
    font-stretch: normal;
    font-style: normal;
    line-height: 1.56;
    letter-spacing: normal;
    color: #1b1d21;
  }
  .interested_form_boxes {
    display: flex;
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
  }
  .interested_box {
    display: flex;
  }
  .data_box {
    width: 238px;
    height: 51px;
    padding: 14px 101px 15px 17px;
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.07);
    background-color: #fafafa;
    border: 0;
  }
  .interested_form_bottom {
    display: flex;
    justify-content: center;
    width: 100%;
  }
  .button_submit {
    width: 238px;
    height: 45px;
    padding: 11px 87px 12px 91px;
    object-fit: contain;
    background-color: #fbb612;
    border: 0;
  }
  @media only screen and (max-width: 768px) {
    .interested_form_boxes {
      display: flex;
      justify-content: space-evenly;
      gap: 10px;
      flex-wrap: wrap;
    }
  }
{%- endstyle -%}

<div class="interested_section">
  <div class="interested_heading_container">
    <p class="interested_heading">Sunt interesat</p>
  </div>
  <div class="interested_container page-width isci-padding-y">
    <div class="interested_rectangle">
      <div class="interested_rectangle_heading">
        <p>
          <u>
            <strong> Strength & Conditioning Coach </strong>
          </u>
        </p>
        <p>Modulul 2 - Sport Strength Coach&trade;</p>
      </div>
      <div class="interested_form">
        <div class="interested_form_description">
          <p>Informa»õii personale</p>
        </div>
        <form class="interested_form_boxes">
          <div class="interested_box">
            <input class="data_box" type="text" id="full_name" name="FullName" placeholder="Nume complet*">
          </div>
          <div class="interested_box">
            <input class="data_box" type="text" id="mail_adress" name="Mail_Adress" placeholder="E-mail*">
          </div>
          <div class="interested_box">
            <input class="data_box" type="text" id="phone" name="Tel" placeholder="Telefon*">
          </div>
          <div class="interested_form_bottom">
            <button class="button_submit" type="submit">TRIMITE</button>
          </div>
        </form>
