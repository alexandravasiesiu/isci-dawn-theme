{%- style -%}
  .header_section {
    display: inline-flex;
    width: 100%;
    justify-content: space-evenly;
    gap: 10px;
  }
  .header_image {
    width: 20%;
  }
  .menu {
    display: inline-flex;
    width: 70%;
    gap: 30px;
    align-items: center;
  }
  .menu_item a {
    font-family: Assistant;
    font-size: 16px;
    font-weight: normal;
    font-stretch: normal;
    font-style: normal;
    line-height: normal;
    letter-spacing: normal;
    color: #000;
    text-decoration: none;
  }
  .header_image img {
    width: 195.3px;
    height: 75px;
    background-color: red;
  }
  .header_bottom {
    width: 10%;
    display: flex;
    align-item: center;
  }
  .no-margin {
    margin: 0;
  }
{%- endstyle -%}
