{%- style -%}
  .modules_section {
    display: flex;
    flex-flow: column;
    row-gap: 50px;
    padding-bottom: 50px;
  }
  .modules_heading_container {
    display: flex;
    flex-flow: column;
    align-items: center;
    background-color: #101010;
  }
  .modules_heading {
    font-family: Assistant;
    font-size: 30px;
    font-weight: normal;
    font-stretch: normal;
    font-style: normal;
    line-height: 1.73;
    letter-spacing: normal;
    color: #fff;
  }
  .modules_flex_container {
    display: flex;
    justify-content: space-evenly;
    width: 100%;
    gap: 30px;
    flex-wrap: wrap;
  }
  .modules_card {
    border-radius: 12px;
    box-shadow: 10px 32px 72px 0 rgba(51, 51, 51, 0.06);
    background-color: #fff;
    width: 30%;
  }
  .modules_card_body {
    display: flex;
    flex-flow: column;
  }
  .modules_card_title,
  .modules_card_subtitle {
    font-family: Assistant;
    font-size: 18px;
    font-weight: 600;
    font-stretch: normal;
    font-style: normal;
    line-height: 1.56;
    letter-spacing: normal;
    color: #1b1d21;
  }
  .modules_card_price,
  .modules_card_text {
    padding: 10px;
    display: flex;
    flex-flow: column;
    row-gap: 5px;
  }
  .modules_card_text {
    background-color: #fafafa;
  }
  .modules_difficulty_section {
    display: flex;
  }
  .modules_difficulty_levels {
    display: flex;
    justify-content: space-around;
  }
  .modules_progress_bar {
    position: relative;
    overflow-x: hidden;
    margin-top: 8px;
  }
  .modules_progress_bar:before {
    width: 100%;
    height: 8px;
    content: '';
    display: block;
    position: absolute;
    background: #d8d8d8;
    bottom: 0;
    border-radius: 5px;
  }
  .modules_difficulty_bar {
    width: 100%;
    height: 8px;
    background: #868686;
    display: block;
    position: relative;
    border-radius: 5px;
  }
  .modules_difficulty_bar span {
    position: absolute;
    top: -30px;
    font-size: 18px;
    padding: 3px 0;
    font-weight: 500;
  }
  .modules_card_difficulty,
  .modules_card_note {
    font-family: Assistant;
    font-size: 16px;
    font-weight: normal;
    font-stretch: normal;
    font-style: normal;
    line-height: normal;
    letter-spacing: normal;
    color: #1b1d21;
    margin: 0;
  }
  .modules_lei {
    font-family: Assistant;
    font-size: 18px;
    font-weight: 600;
    font-stretch: normal;
    font-style: normal;
    line-height: normal;
    letter-spacing: normal;
    color: #af0101;
  }
  .modules_lei,
  .modules_difficulty_levels p {
    margin: 0;
  }
  .modules_button_container {
    display: flex;
    gap: 10px;
    justify-content: space-between;
    width: 100%;
  }
  .modules_button_add {
    width: 150px;
    height: 45px;
    border: none;
    color: black;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    background-color: #fbb612;
  }
  .modules_button_details {
    width: 150px;
    height: 45px;
    border: solid 1px #fbb612;
    color: black;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    background-color: transparent;
  }
  .w-35 {
    width: 35%;
  }
  .w-70 {
    width: 70%;
  }
  .w-100 {
    width: 100%;
  }
  .rg-30 {
    row-gap: 30px;
  }
  @media only screen and (max-width: 768px) {
    .modules_flex_container {
      display: flex;
      justify-content: space-evenly;
      flex-wrap: wrap;
      gap: 50px;
    }
    .modules_heading {
      display: flex;
      width: 90%;
    }
    .modules_card {
      border-radius: 12px;
      box-shadow: 10px 32px 72px 0 rgba(51, 51, 51, 0.06);
      background-color: #fff;
      width: 90%;
    }
  }
{%- endstyle -%}

<div class="modules_section">
  <div class="modules_heading_container">
    <p class="modules_heading">Strength & Conditioning Coach</p>
  </div>
  <div class="modules_flex_container page-width isci-padding-y">
    {%- for block in section.blocks -%}
      <div class="modules_card">
        <div class="modules_card_body rg-30">
          <div class="modules_card_text">
            <h3 class="modules_card_title">{{ block.settings.title }}</h3>
            <p class="modules_card_subtitle">{{ block.settings.subtitlu }}</p>
            <div class="modules_difficulty_section">
              <div style="width:30%">
                <p class="modules_card_difficulty">Dificultate</p>
              </div>
              <div style="width:70%">
                <div class="modules_progress_bar">
                  <div
                    class='modules_difficulty_bar
                    {% if block.settings.difficulty == 'usor' %}
                      w-35
                    {% endif %}
                    {% if block.settings.difficulty == 'mediu' %}
                      w-70
                    {% endif %}
                    {% if block.settings.difficulty == 'dificil' %}
                      w-100
                    {% endif %}
                    "'>
                    <span class="skill-count2"></span>
                  </div>
                </div>
                <div class="modules_difficulty_levels">
                  <p>
                    <strong>ușor</strong>
                  </p>
                  <p>mediu</p>
                  <p>mare</p>
                </div>
              </div>
            </div>
          </div>
          <div class="modules_card_price">
            {% if block.settings.soon %}
              <div>
                <p class="modules_card_note">
                  <strong>Va fi lansat în curând</strong>
                </p>
              </div>
              <div class="modules_button_container">
                {% assign interestedUrl = '/pages/sunt-interesat?product_handle=' | append: block.settings.product.handle %}
                <a
                  class="modules_button_details"
                  role="link"
                  href="{{ interestedUrl }}">
                  Sunt interesat
                </a>
              </div>
            {% else %}
              <div>
                <p class="modules_lei">
                  <span style="color:#101010; opacity: 0.63; text-decoration: line-through;">
                    {{ block.settings.price }}
                  </span>&emsp;&emsp;&emsp;
                  {{ block.settings.discount_price }}
                </p>
              </div>
              <div class="modules_button_container">
                {%- if
 block.settings.product
 and block.settings.product.selected_or_first_available_variant.available
 %}
                  {%- form 'product',
 block.settings.product,
 class: 'form',
 novalidate: 'novalidate',
 data-type: 'add-to-cart-form'
 -%}
                    <input
                      type="hidden"
                      name="quantity"
                      value="1">
                    <input
                      type="hidden"
                      name="id"
                      value="{{ block.settings.product.selected_or_first_available_variant.id }}">
                    <button
                      class="modules_button_add"
                      name="add"
                      type="submit">Adaugă în coș</button>
                  {%- endform -%}
                {% endif %}
                <a
                  class="modules_button_details"
                  role="link"
                  href="{{ block.settings.product.url }}">
                  Detalii
                </a>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "ISCI modules",
    "class": "section",
    "tag": "section",
    "settings": [],
    "blocks": [
      {
        "type": "column",
        "name": "Card",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Titlu"
          },
          {
            "type": "text",
            "id": "subtitlu",
            "label": "Subtitlu"
          },
          {
            "type": "select",
            "id": "difficulty",
            "label": "Dificultate",
            "options": [
              {
                "value": "usor",
                "label": "Ușor"
              }, {
                "value": "mediu",
                "label": "Mediu"
              }, {
                "value": "dificil",
                "label": "Dificil"
              }
            ],
            "default": "mediu"
          },
          {
            "type": "text",
            "id": "price",
            "label": "Pret intreg"
          }, {
            "type": "text",
            "id": "discount_price",
            "label": "Pret cu discount"
          }, {
            "type": "product",
            "id": "product",
            "label": "Produs"
          }, {
            "type": "checkbox",
            "id": "soon",
            "label": "In curand"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "ISCI modules",
        "blocks": [
          {
            "type": "column"
          }, {
            "type": "column"
          }, {
            "type": "column"
          }
        ]
      }
    ]
  }
{% endschema %}